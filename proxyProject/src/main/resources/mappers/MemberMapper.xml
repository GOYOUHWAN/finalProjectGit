<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberMapper">
	<insert id="memberJoin" parameterType="com.choa.member.MemberDTO">
		insert into member
		values(#{id},#{pw},#{name},#{tel},#{birth},#{email},#{address},1,1)
	</insert>
	<select id="memberLogin" resultType="com.choa.member.MemberDTO" parameterType="com.choa.member.MemberDTO">
		select * from member where id=#{id} and pw=#{pw}
	</select>
	<update id="update" parameterType="com.choa.member.MemberDTO">
		update member
		<trim prefix="set" suffixOverrides=",">
			<if test="pw!=null">pw=#{pw}</if>
			<if test="name!=null">name=#{name}</if>
			<if test="tel!=null">tel=#{tel}</if>
			<if test="email!=null">email=#{email}</if>
			<if test="address!=null">address=#{address}</if>
		</trim>
		where id=#{id}
	</update>
	<delete id="delete" parameterType="com.choa.member.MemberDTO">
		delete member where id=#{id} and pw=#{pw}
	</delete>

</mapper>